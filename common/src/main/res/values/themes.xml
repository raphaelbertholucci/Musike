<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Musike" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/color_dark_blue</item>
        <item name="android:windowBackground">@color/color_dark_blue</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title.Yellow">
        <item name="android:textColor">@color/color_yellow</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/extra_small_text</item>
        <item name="android:textColor">@color/color_white_alpha</item>
    </style>

    <style name="Body.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Body.Medium">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="Body.Blue">
        <item name="android:textColor">@color/color_dark_blue</item>
    </style>

    <style name="Body.Blue.Medium">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="Shimmer">
        <item name="android:background">@drawable/common_bg_shimmer_rounded_4</item>
    </style>

    <style name="AppTheme.Dialog.MusikeTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>